extends layout-auth

block content
  h1 Your Favourites

  if artworks.length
    .gallery
      each art in artworks
        .artwork
          img(src=`/images/${art.image}` alt=art.title)
          h2= art.title
          p= art.description
          p Category: #{art.category}
          form(action=`/favourites/remove/${art.id}`, method="POST")
            button(type="submit") Remove from Favourites
  else
    p You have not added any artworks to your favourites yet.
